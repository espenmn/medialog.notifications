<?xml version="1.0"?>
<registry
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="medialog.notifications">

<!-- -*- extra stuff goes here -*- -->
 
  <record name="plone.app.querystring.field.message_assigned.description" interface="plone.app.querystring.interfaces.IQueryField" field="description">
    <field type="plone.registry.field.Text">
      <title>Assigned Description</title>
    </field>
    <value xmlns:ns0="http://xml.zope.org/namespaces/i18n" ns0:domain="plone" ns0:translate="">The person that was assigned an item</value>
  </record>
  <record name="plone.app.querystring.field.message_assigned.enabled" interface="plone.app.querystring.interfaces.IQueryField" field="enabled">
    <field type="plone.registry.field.Bool">
      <title>Enabled</title>
    </field>
    <value>True</value>
  </record>
  <record name="plone.app.querystring.field.message_assigned.fetch_vocabulary" interface="plone.app.querystring.interfaces.IQueryField" field="fetch_vocabulary">
    <field type="plone.registry.field.Bool">
      <default>True</default>
      <title>Fetch vocabulary</title>
    </field>
    <value>True</value>
  </record>
  <record name="plone.app.querystring.field.message_assigned.group" interface="plone.app.querystring.interfaces.IQueryField" field="group">
    <field type="plone.registry.field.TextLine">
      <title>Group</title>
    </field>
    <value xmlns:ns0="http://xml.zope.org/namespaces/i18n" ns0:domain="plone" ns0:translate="">Metadata</value>
  </record>
  <record name="plone.app.querystring.field.message_assigned.operations" interface="plone.app.querystring.interfaces.IQueryField" field="operations">
    <field type="plone.registry.field.List">
      <title>Operations</title>
      <value_type type="plone.registry.field.DottedName">
        <title>Operation ID</title>
      </value_type>
    </field>
    <value>      
      <element>plone.app.querystring.operation.string.currentUser</element>
      <element>plone.app.querystring.operation.selection.any</element>
      <element>plone.app.querystring.operation.selection.none</element>
    </value>
  </record>
  <record name="plone.app.querystring.field.message_assigned.sortable" interface="plone.app.querystring.interfaces.IQueryField" field="sortable">
    <field type="plone.registry.field.Bool">
      <title>Sortable</title>
    </field>
    <value>True</value>
  </record>
  <record name="plone.app.querystring.field.message_assigned.title" interface="plone.app.querystring.interfaces.IQueryField" field="title">
    <field type="plone.registry.field.TextLine">
      <title>Notification Assigned</title>
    </field>
    <value xmlns:ns0="http://xml.zope.org/namespaces/i18n" ns0:domain="plone" ns0:translate="">Notification To</value>
  </record>
  <record name="plone.app.querystring.field.message_assigned.vocabulary" interface="plone.app.querystring.interfaces.IQueryField" field="vocabulary">
    <field type="plone.registry.field.TextLine">
      <title>Vocabulary</title>
    </field>
    <value>plone.app.vocabularies.Users</value>
  </record>   
</registry>
